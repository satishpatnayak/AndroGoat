<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Scan a Product QR Code" android:textSize="20sp" android:textStyle="bold"
        android:gravity="center" android:layout_marginBottom="20dp" />

    <!-- Camera Preview Frame -->
    <com.budiyev.android.codescanner.CodeScannerView android:id="@+id/scanner_view"
        android:layout_width="match_parent" android:layout_height="250dp"
        android:background="#000000" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Product Details:" android:layout_marginTop="20dp" android:textStyle="bold" />

    <!-- Vulnerable WebView -->
    <WebView android:id="@+id/resultWebView" android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_marginTop="10dp"
        android:background="#EEEEEE" />

</LinearLayout>
